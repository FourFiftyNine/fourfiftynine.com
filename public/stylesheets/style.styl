/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** General
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
html, button, input, select, textarea
  font-family: 'museo-slab', serif
  color: darkGrey
body
  background: url('/images/background.png') repeat fixed
  smooth()
  text-shadow: 3px 3px 3px rgba(0,0,0,.07)

#spinner
  display: none
  position: absolute !important
  left: 50% !important
  // top: 230px !important
  top: 250px !important

ul
