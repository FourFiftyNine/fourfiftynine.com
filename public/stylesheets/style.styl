@media only screen and (min-device-width : 320px) and (max-device-width : 480px) 
  h1
/* Smartphones (landscape) ----------- */
@media only screen and (min-width : 321px) 
  h1
/* Smartphones (portrait) ----------- */
@media only screen and (max-width : 320px) 
  h1
/* iPads landscape) ----------- */
@media only screen and (max-width : 1300px) 
  .projects.view  
    #projects
      .arrow
        &.prev
          left: 20px
        &.next
          margin-right: 20px
      h1
        font-size: 60px
        line-height: 55px
      h2
        margin: 10px 0 5px
      .screenshots
        margin-right: 85px
      .copy
        header,section
          margin-left: 85px
        p
          font-size: 12px
          line-height: 14px
      .specs
        ul
          li
            font-size: 12px
            line-height: 14px

@media only screen and (max-width : 1100px)
  #navigation
    h1
      a
        background: url(/images/logo-numbers.png) no-repeat center
        height: 109px
        margin: 0 auto
        display: block
        img
          display: none
    nav
      ul
        li
          margin: 0
          a
            font-size: 40px
            height: 50px
            line-height: 45px
            margin: 10px 0
            padding: 0 10px
            &:hover,
            &:active
              border-radius: 0
@media only screen and (max-width : 980px) 
  .projects
    &.view
      #projects
        .arrow
          &.prev
            left: 13px
          &.next
            margin-right: 13px
        .screenshots
          margin-right: 65px
        .copy
          header,section
            margin-left: 65px

@media only screen and (max-width : 768px)
  .projects
    .view
      #projects
        h1
          font-size: 40px
        h2
          font-size: 30px

/* iPads (landscape) ----------- */
@media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : landscape) 
  h1
/* iPads (portrait) ----------- */
@media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : portrait) 
  h1
/* Desktops and laptops ----------- */
@media only screen and (min-width : 1224px) 
  h1
/* Large screens ----------- */
@media only screen and (min-width : 1824px) 
  h1
/* iPhone 4 ----------- */
@media only screen and (-webkit-min-device-pixel-ratio : 1.5), only screen and (min-device-pixel-ratio : 1.5)
  h1
