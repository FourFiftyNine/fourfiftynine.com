/*~~ Colors ~~*/
blue = #587891
lightGrey = #b3adaf
grey = #8a8a8b
darkGrey = #505050

@import 'nib'
@import 'import/_h5bp'


/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** General
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/

body
  background: url('/images/background.png') repeat
  smooth()
  text-shadow: 3px 3px 3px rgba(0,0,0,.07)

#spinner
  display: none
  position: absolute !important
  left: 50% !important
  // top: 230px !important
  top: 250px !important

/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Typography
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
body
  font-family: 'museo-slab', serif
  font-size: 14px
  font-weight: 500
  p
    line-height: 24px

h1,h2
  font-family: 'tandelle', sans-serif

h1
  color: darkGrey
  font-weight: normal
h2
  color: blue
  font-size: 36px
  font-weight: normal


/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Layout
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
body
  // border-top: 5px solid blue
#top-border
  background: url('/images/background-top.png') repeat-x top
#content
  // background: url('/images/background-top.png') repeat-x top
  opacity: 0 
  position: relative
  article
    margin: 0 auto
#sidebar
  background: url('/images/background-sidebar.png') repeat
  border-left: 1px solid #000000
  border-left: 1px solid rgba(0,0,0,.1)
  box-shadow: 0 0 9px 0 rgba(0,0,0,.09)
  height: 100%
  max-width: 245px
  min-width: 175px
  position: fixed
  right: 0
  top: 0
  width: 18%
  h1 // logo is 234px wide
    padding: 0 10px
    text-align: center
    img
      width: 95%
  /*~~ Navigation ~~*/ 
  nav
    ul
      li
        margin: 10px 10px
        text-align: center
        a
          color: blue
          display: block
          font-family: 'tandelle'
          font-size: 48px
          text-decoration: none
          &:hover
            background: rgba(0,0,0,.04);
            border-radius: 50px;
          &:active
            box 
            position: relative
            top: 1px
            background: rgba(0,0,0,.08)
            border-radius: 50px;
            //color: darkGrey


/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Home
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
.home #content 
  h1
    font-size: 60px
    font-weight: normal
    line-height: 60px
    margin-bottom: 40px
    margin-top: 0
    padding-top: 40px
    text-align: center
  #images
    margin: 0 auto;
    a
      border-radius: 5px
      border: 1px solid rgba(151,151,151,.3)
      display: inline-block
      height: 198px
      margin: 10px
      width: 248px
      &:hover
        // box-shadow: 0 0 0 5px rgba(88, 120, 145,.1)
        box-shadow: 0 0 0 5px rgba(0,0,0,.1)
        .image
          box-shadow: none
      &:active
        box-shadow: 0 0 20px 0 rgba(0,0,0,.50) inset
        .image
          box-shadow: 0 0 0 5px blue
          box-shadow: 0 0 0 5px rgba(0,0,0,.1)
      .image
        border-radius: 5px
        box-shadow: 0 0 10px 0 rgba(0,0,0,.12)
        float: left
        height: 200px
        left: -1px
        position: relative
        top: -1px
        width: 250px
        z-index: -1
      .name
        background: rgba(0,0,0,.5)
        border-radius: bottom 5px
        bottom: 0
        color: #ffffff
        font-weight: bold
        padding: 10px 0
        position: absolute
        text-align: center
        width: 100%
      #dekko
        background: url(/images/projects/dekko/1.png) no-repeat
      #halfpretties
        background: url(/images/projects/halfpretties/1.png) no-repeat -27px 0px

/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Projects
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
#projects
  h1
    margin: 35px 0 0
    font-size: 100px
  h2
    margin: 10px 0 10px
  .arrow
    background: url(/images/sprite-arrows-blue.png)
    display: block
    height: 65px
    width: 29px
    position: fixed
    top: 420px
    &.prev
      left: 35px
      background-position: 0 -65px
    &:hover
      opacity: .8
  .copy
    float: left
    position: fixed
    left: 0
    margin-left: 110px
    width: 30%
    p
      text-align: left
      margin-top: 0
      margin-bottom: 10px
      font-size: 17px
    .specs
      ul
        list-style-position: outside
        margin-top: 0
        padding-left: 20px
        list-style-image: url(/images/bullet.png)
        li
          font-size: 14px
  .screenshots
    float: right
    margin-top: 40px
    margin-right: 110px
    width: 50%
    img
      border-radius: 10px
      margin-bottom: 40px
      box-shadow: 0 0 10px 0 rgba(0,0,0,.4)
      opacity: .5
      width: 100%
      &.active
        opacity: 1

/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Complex Z-Indexes (might be unnecessary)
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
#top-border
  height: 19px
  position: fixed
  top: 0
  width: 100%
  z-index: 1

// http://css-tricks.com/snippets/css/media-queries-for-standard-devices/
/* iPhone [portrait + landscape] */
@media only screen and (max-device-width: 480px)
  .selector-01 { margin: 10px; }
  .selector-02 { margin: 10px; }
  .selector-03 { margin: 10px; }
/* Smartphones (portrait and landscape) ----------- */
@media only screen and (min-device-width : 320px) and (max-device-width : 480px) 
  h1
/* Smartphones (landscape) ----------- */
@media only screen and (min-width : 321px) 
  h1
/* Smartphones (portrait) ----------- */
@media only screen and (max-width : 320px) 
  h1
/* iPads landscape) ----------- */
@media only screen and (max-width : 1300px) 
  #projects
    .arrow
      &.prev
        left: 10px
    h2
      margin: 10px 0 5px
    .screenshots
      margin-right: 55px
    .copy
      margin-left: 55px
      p
        font-size: 12px
        line-height: 18px

@media only screen and (max-width : 1100px)
  #sidebar
    min-width: 82px
    width: 82px
    h1
      a
        background: url(/images/logo-numbers.png) no-repeat
        height: 109px
        width: 82px
        margin: 0 auto
        display: block
        img
          display: none
    nav
      ul
        li
          a
            font-size: 24px
            &:hover,
            &:active
              border-radius: 10px
@media only screen and (max-width : 960px) 
  #projects
    h1
      font-size: 58px


@media only screen and (max-width : 768px)
  #projects
    h1
      font-size: 40px
    h2
      font-size: 30px

/* iPads (landscape) ----------- */
@media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : landscape) 
  h1
/* iPads (portrait) ----------- */
@media only screen and (min-device-width : 768px) and (max-device-width : 1024px) and (orientation : portrait) 
  h1
/* Desktops and laptops ----------- */
@media only screen and (min-width : 1224px) 
  h1
/* Large screens ----------- */
@media only screen and (min-width : 1824px) 
  h1
/* iPhone 4 ----------- */
@media only screen and (-webkit-min-device-pixel-ratio : 1.5), only screen and (min-device-pixel-ratio : 1.5)
  h1
