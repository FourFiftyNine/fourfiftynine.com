/** Begin FourFiftyNine.com
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*
/*~~ Colors ~~*/
blue = #587891
lightGrey = #b3adaf
grey = #8a8a8b
darkGrey = #505050

@import 'nib'
@import 'import/_h5bp'


/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** General
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
html, button, input, select, textarea
  font-family: sans-serif
  color: darkGrey
body
  background: url('/images/background.png') repeat
  smooth()
  text-shadow: 3px 3px 3px rgba(0,0,0,.07)

#spinner
  display: none
  position: absolute !important
  left: 50% !important
  // top: 230px !important
  top: 250px !important

ul
  list-style-position: outside
  margin-top: 0
  padding-left: 20px
  list-style-image: url(/images/bullet.png)
  li
    font-size: 17px
/*~~ Links ~~*/
a:visited
  text-decoration: none
a:active {
  position: relative
  top: 1px
}
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Typography
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
body
  font-family: 'museo-slab', serif
  font-size: 14px
  font-weight: 500
  p
    line-height: 24px

h1,h2,h3
  font-family: 'tandelle', sans-serif

h1
  color: darkGrey
  font-weight: normal
h2
  color: blue
  font-size: 36px
  font-weight: normal

h3
  color: blue
  font-size: 30px
  font-weight: normal
  margin-bottom: 5px

/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Layout
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
body
  // border-top: 5px solid blue
#top-border
  background: url('/images/background-top.png') repeat-x top
#content
  width: 86%
  h1
    font-size: 100px
    font-weight: normal
    line-height: 100px
    margin-bottom: 40px
    margin-top: 0
    padding-top: 40px
    text-align: center
    padding: 40px 20px 0
  // background: url('/images/background-top.png') repeat-x top
  opacity: 0 
  position: relative
  article
    margin: 0 auto

#navigation
  background: url('/images/background-sidebar.png') repeat
  border-left: 1px solid #000000
  border-left: 1px solid rgba(0,0,0,.1)
  box-shadow: 0 0 9px 0 rgba(0,0,0,.09)
  height: 100%
  // max-width: 245px
  // min-width: 175px
  position: fixed
  right: 0
  top: 0
  width: 14%
  /*~~ Logo ~~*/
  h1 // logo is 234px wide
    padding: 0 10px
    text-align: center
    margin-top: 40px
    img
      width: 95%
  /*~~ Side Navigation ~~*/ 
  nav
    ul
      li
        margin: 10px 10px
        text-align: center
        a
          color: blue
          display: block
          font-family: 'tandelle'
          font-size: 48px
          text-decoration: none
          &:hover
            background: rgba(0,0,0,.04);
            border-radius: 50px;
          &:active
            box 
            position: relative
            top: 1px
            background: rgba(0,0,0,.08)
            border-radius: 50px;
            //color: darkGrey


/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Home
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
.home
  #content      
    h2
      padding: 0 40px
      color: grey
      text-align: center
      p
        line-height: 44px
      strong
        color: darkGrey
        font-weight: normal
    section
      padding: 0 40px

/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Projects
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/*~~ projects/index ~~*/
.projects.index #content
  #images
    margin: 0 auto
    text-align: center
    padding: 0 20px
    a
      border-radius: 5px
      border: 1px solid rgba(151,151,151,.3)
      display: inline-block
      height: 198px
      margin: 10px
      width: 248px
      &:hover
        // box-shadow: 0 0 0 5px rgba(88, 120, 145,.1)
        box-shadow: 0 0 0 5px rgba(0,0,0,.1)
        .image
          box-shadow: none
      &:active
        box-shadow: 0 0 20px 0 rgba(0,0,0,.50) inset
        .image
          box-shadow: 0 0 0 5px blue
          box-shadow: 0 0 0 5px rgba(0,0,0,.1)
      .image
        border-radius: 5px
        box-shadow: 0 0 10px 0 rgba(0,0,0,.12)
        float: left
        height: 200px
        left: -1px
        position: relative
        top: -1px
        width: 250px
        z-index: -1
      .name
        background: rgba(0,0,0,.5)
        border-radius: bottom 5px
        bottom: 0
        color: #ffffff
        font-weight: bold
        padding: 10px 0
        position: absolute
        text-align: center
        width: 100%
      #dekko
        background: url(/images/projects/dekko/thumb.jpg) no-repeat
      #dekko-developer
        background: url(/images/projects/dekko-developer/thumb.jpg) no-repeat
      #halfpretties
        background: url(/images/projects/halfpretties/thumb.jpg) no-repeat
      #drinkchai
        background: url(/images/projects/drinkchai/thumb.jpg) no-repeat 
      #worthington-energy
        background: url(/images/projects/worthington-energy/thumb.jpg) no-repeat 
      #half-pretties
        background: url(/images/projects/half-pretties/thumb.jpg) no-repeat 

/*~~ projects/view ~~*/
.projects.view
  #content
    width: 100%
  #projects
    h1
      font-size: 100px
      line-height: 100px
      margin: 35px 0 5px
      padding: 0
      text-align: left
    h2
      margin: 10px 0 10px
    .arrow
      background: url(/images/sprite-arrows-blue.png)
      display: block
      height: 65px
      width: 29px
      position: fixed
      top: 45%
      &.prev
        left: 35px
        background-position: 0 -65px
      &.next
        right: 14%
        margin-right: 35px
      &:hover
        opacity: .7
    .copy
      float: left
      -webkit-overflow-scrolling: touch
      position: fixed
      left: 0
      width: 35%
      section,
      header
        margin-left: 110px
        &.overview
          a
            text-decoration: none
            color: grey
            border-bottom: 1px dotted grey
            &:hover
              color: darkGrey

        &.website
          a
            display: block
            color: grey
            font-size: 35px
            font-family: 'tandelle', 'sans-serif'
            text-decoration: none
            &:hover
              color: darkGrey
            &.back-to-projects
              font-size: 25px
      p
        text-align: left
        margin-top: 0
        margin-bottom: 10px
        font-size: 17px

    .screenshots
      margin-right: 110px;
      margin-top: 40px;
      position: absolute;
      right: 14%;
      width: 40%;
      img
        border-radius: 10px
        margin-bottom: 40px
        box-shadow: 0 0 10px 0 rgba(0,0,0,.2)
        // opacity: .5
        width: 100%
    /*~~ All Projects Partial ~~*/
    #all-projects
      background: url(/images/background-sidebar.png) repeat
      border-radius: bottom right 10px, top right 10px
      box-shadow: 0 0 9px 0 rgba(0,0,0,.09)
      border: 1px solid #000000
      border: 1px solid rgba(0,0,0,.1)
      padding: 20px
      position: fixed
      bottom: 0px
      left: 0px
