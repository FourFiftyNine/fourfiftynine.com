/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Buttons
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
.btn
  &.grey
    background: linear-gradient(top, lightGrey, grey)
    border: 0
    border-radius: 50px
    box-shadow: 3px 3px 3px 0 rgba(0,0,0,.07)
    color: white
    display: inline-block
    font-family: 'museo-slab', serif
    font-size: 17px
    height: 30px
    line-height: 30px
    padding: 0 20px
    &:hover,
    &.active
      background: blue
    &:active,
    &.active
      box-shadow: inset 3px 3px 3px 0 rgba(0,0,0,.17)

input[type="submit"].btn.grey
  height: 40px
  line-height: 40px
  border-radius: 5px

/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
/** Forms / Inputs
/*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~*/
form
  clear: both
  padding-right: 5%
  margin-top: 20px
  margin-right: 5%
label
  display: block
  margin: 15px 0 5px
  font-size: 24px
